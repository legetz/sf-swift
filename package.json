{
  "name": "sf-swift",
  "version": "1.2.2",
  "main": "dist/index.js",
  "type": "module",
  "exports": "./dist/index.js",
  "oclif": {
    "bin": "sf",
    "commands": "./dist/commands",
    "topicSeparator": " ",
    "topics": {
      "metadata": {
        "description": "Commands for Salesforce metadata management"
      }
    }
  },
  "files": [
    "/dist",
    "/messages"
  ],
  "scripts": {
    "build": "tsc",
    "prepack": "npm run clean && npm run build",
    "plugin:install": "sf plugins install .",
    "clean": "rm -rf dist",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "test:watch": "mocha --watch",
    "prettier": "prettier --write",
    "prettier:all": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:verify": "prettier --list-different \"src/**/*.ts\" \"test/**/*.ts\"",
    "scratch:deploy": "./scripts/scratch-deploy.sh",
    "scratch:compare": "./scripts/scratch-pull-compare.sh",
    "prepare": "husky"
  },
  "keywords": [
    "salesforce-cli-plugin",
    "salesforce-cli",
    "salesforce",
    "sfdx",
    "sfdx-plugin",
    "oclif",
    "xml",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "A fast and powerful Salesforce CLI plugin with utilities for metadata formatting, sorting, and more",
  "homepage": "https://github.com/legetz/sf-swift#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legetz/sf-swift.git"
  },
  "bugs": {
    "url": "https://github.com/legetz/sf-swift/issues"
  },
  "devDependencies": {
    "@salesforce/dev-scripts": "^11.0.4",
    "@types/chai": "^5.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "@types/xml2js": "^0.4.14",
    "chai": "^6.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-apex": "^2.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "@salesforce/core": "^8.26.0",
    "@salesforce/kit": "^3.2.4",
    "@salesforce/sf-plugins-core": "^12.2.6",
    "js-yaml": "^4.1.1",
    "xml2js": "^0.6.2"
  }
}
